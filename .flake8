[flake8]
select = ANN, B, B9, BLK, C, D, DAR, E, F, I, S, W
ignore = E203, E501, W503
max-complexity = 10
max-line-length = 80
# Import Order
application-import-names = hypermodern_python_lucasmbastos, tests
import-order-style = google
# Bugbear
per-file-ignores = tests/*:S101
# Docstrings
docstring-convention = google
